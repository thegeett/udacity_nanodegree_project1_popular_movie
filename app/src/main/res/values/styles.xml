<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="movie_information_detail">
        <item name="android:paddingTop">@dimen/movie_information_detail_panel_padding</item>
        <item name="android:paddingBottom">@dimen/movie_information_detail_panel_padding</item>
        <item name="android:paddingRight">@dimen/movie_information_detail_panel_padding</item>
        <item name="android:paddingLeft">@dimen/movie_information_detail_panel_padding_left</item>
        <item name="android:background">@color/movie_information_header</item>
    </style>

    <style name="movie_name_text_view">
        <item name="android:textSize">@dimen/movie_name_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="movie_poster_overview_panel">
        <item name="android:paddingTop">@dimen/movie_poster_overview_panel_padding</item>
    </style>

    <style name="movie_poster_panel">
        <item name="android:paddingLeft">@dimen/movie_poster_panel_padding</item>
    </style>

    <style name="movie_ratting_releasedate_panel">
        <item name="android:textSize">@dimen/movie_ratting_text_size</item>
        <item name="android:layout_marginBottom">@dimen/movie_ratting_panel_margin</item>
    </style>

    <style name="movie_overview_text_view">
        <item name="android:textSize">@dimen/movie_overview_text_size</item>
        <item name="android:paddingLeft">@dimen/movie_overview_panel_padding</item>
        <item name="android:paddingTop">@dimen/movie_overview_panel_padding_top</item>
        <item name="android:paddingRight">@dimen/movie_overview_panel_padding</item>
        <item name="android:paddingBottom">@dimen/movie_overview_panel_padding_top</item>
    </style>


</resources>
