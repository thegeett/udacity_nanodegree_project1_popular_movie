<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/movie_trailer_option_liner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tailor_play_image"
            style="@style/movie_tailor_play_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_youtube_play_grey600_24dp" />

        <TextView
            android:id="@+id/movie_tailor_name_text_view"
            style="@style/movie_tailor_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:clickable="true"
            android:gravity="left|center_vertical" />

    </LinearLayout>

</LinearLayout>